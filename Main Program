        public Tutors Tutors(string firstName, string lastName, int cost)
        {
            Tutors tutors = new Tutors();
            Console.WriteLine("What is the tutor's first name?");
            tutors.firstName = Console.ReadLine();
            Console.WriteLine("What is the tutor's last name?");
            tutors.lastName = Console.ReadLine();
            Console.WriteLine("How much does the tutor cost?");
            tutors.cost = Int32.Parse(Console.ReadLine());
            return tutors;
        }

        static void Main(string[] args)
        {
